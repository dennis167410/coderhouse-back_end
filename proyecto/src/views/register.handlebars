
<main class="container-fluid">
    <section class="row">
        <h1 class="col-12 text-center text-uppercase">
            Registro de usuario
        </h1>
    </section>

    <section class="container">
        <section class="row justify-content-center">
            <article class="col-12 col-md-8 col-lg-5 mt-4">
                <form action="/api/session/register" method="post" class="p-4 rounded shadow-sm">
                    <div class="form-group">
                        <label for="first_name">Nombre:</label>
                        <input type="text" name="first_name" id="first_name" class="form-control" placeholder="Ingrese su nombre" />
                    </div>
                    
                    <div class="form-group">
                        <label for="last_name">Apellido:</label>
                        <input type="text" name="last_name" id="last_name" class="form-control" placeholder="Ingrese su apellido" />
                    </div>
                    
                    <div class="form-group">
                        <label for="email">*Mail:</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Ingrese su email" required />
                    </div>
                    
                    <div class="form-group">
                        <label for="age">Edad:</label>
                        <input type="number" name="age" id="age" class="form-control" placeholder="Ingrese su edad" />
                    </div>
                    
                    <div class="form-group">
                        <label for="password">*Password:</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Ingrese su password" required />
                    </div>
                    
                    <div class="form-group">
                        <label for="role">Role:</label>
                        <select name="role" id="role" class="form-control" required>
                            <option value="PUBLIC">public</option>
                            <option value="USER">user</option>
                            <option value="PREMIUM">premium</option>
                            <option value="ADMIN">admin</option>
                        </select>
                    </div>

                    <button type="submit" class="btn w-100 mt-3 registro">Registrar</button>   
                </form>

                <form class="mt-3 text-center" action="/api/views/login" method="get">
                    <button type="submit" class="btn w-100 login">Login</button>   
                </form>
            </article>

            <article class="col-12 text-center mt-2">
                <p>(*) Campo requerido</p>
            </article>

            <article class="col-12 text-center">
                {{#if message}}
                    <p>{{message}}</p>
                {{/if}}
            </article>
        </section>
    </section>
</main>
